@page
@model Serb_Diana_Proiect.Pages.Categorii.EditModel

@{
    ViewData["Title"] = "Editeaza";
}

<h1>Editeaza</h1>

<h4>Categorie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Categorie.ID" />
            <div class="form-group">
                <label asp-for="Categorie.NumeCategorie" class="control-label"></label>
                <input asp-for="Categorie.NumeCategorie" class="form-control" />
                <span asp-validation-for="Categorie.NumeCategorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salveaza" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Inapoi la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
